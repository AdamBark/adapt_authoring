<div class="profile-inner">
  <div class="error-text display-none">
      {{t 'app.fixerrors'}}
  </div>
  <div class="editing-overlay-panel form-container-style">

    <div class="editing-overlay-panel-content inner">
      <div class="intro-text">
        {{t 'app.editprofileinformation'}}
      </div>
      <div class="editing-overlay-panel-content-inner">

        <form class="forms">

          {{#if rolesAsName}}
            <div class="form-group">
              <label>{{t 'app.role'}}</label>
              <dl>
                {{#each rolesAsName}}
                  <dt>{{this}}</dt>
                {{/each}}
              </dl>
            </div>
          {{/if}}

          <div class="form-group">
            <label>{{t 'app.email'}}
              <span id="titleErrorMessage" class="error"></span>
            </label>
            {{email}}
          </div>

          <div class="form-group">
            <label for="firstName">{{t 'app.firstname'}}
              <span class="req">*</span>
              <span id="firstNameError" class="error"></span>
            </label>
            <input type="text" class="width-30" id="firstName" value="{{firstName}}" autocomplete="off">
          </div>

          <div class="form-group">
            <label for="lastName">{{t 'app.lastname'}}
              <span class="req">*</span>
              <span id="lastNameError" class="error"></span>
            </label>
            <input type="text" class="width-30" id="lastName" value="{{lastName}}" autocomplete="off">
          </div>

          {{#ifValueEquals auth "local"}}
            <div class="change-password-section">
              <div class="form-group">
                <div class="inner display-none">
                  <label for="password">{{t 'app.newpassword'}}
                    <span class="req">*</span>
                    <span id="passwordError" class="error feedback"></span>
                  </label>
                  <div class="password-holder">
                    <input type="password" class="width-15" id="password" value="" autocomplete="off">
                    <button class="toggle-password"><i class="fa fa-eye"></i></button>
                  </div>
                </div>
                <button class="btn primary change-password">{{t 'app.changepassword'}}</button>
              </div>
            </div>
          {{/ifValueEquals}}

        </form>
      </div>
    </div>
  </div>
</div>
